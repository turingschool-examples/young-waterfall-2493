<div class="columns">
  <h1><%= @movie.title %></h1>
  <p>Year: <%= @movie.creation_year %></p>
  <p>Genre: <%= @movie.genre %></p>
</div>

<div class="columns" id="actors">
  <h1>Actors</h1>
  <% @movie.actors.each do |a| %>
    <p><%= a.name %></p>
  <% end %>
</div>

<div class="columns">
  <%= form_with url: "/movies/#{@movie.id}/add_actor", method: :patch, local: true do |f| %>
    <%= f.select :actor, @movie.add_actor_options %>
    <%=  f.submit %>
  <% end %>
</div>
